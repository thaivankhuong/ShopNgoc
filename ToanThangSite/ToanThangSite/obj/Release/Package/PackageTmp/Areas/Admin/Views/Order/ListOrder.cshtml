@model IEnumerable<ToanThangSite.Entities.Core.Order>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Site - Admin : @ViewBag.Title</title>
    @Styles.Render("~/Content/acss")
    @Scripts.Render("~/Content/ajs")
    <style>
        .rightpanel {
            margin-left: 0 !important;
        }

        .leftpanel {
            margin-left: -260px !important;
        }
    </style>
</head>
<body>
    <div class="mainwrapper">
        <div class="leftpanel">
            <div class="logopanel">
                <h1><a href="http://thaoduoctoanthang.com">ToanThang-AD <span>v1.0</span></a></h1>
            </div><!--logopanel-->
            <div class="datewidget">Today is Tuesday, Dec 25, 2012 5:30pm</div>
            <div class="searchwidget">
            </div><!--searchwidget-->
            <div class="leftmenu">
                <ul class="nav nav-tabs nav-stacked">
                    <li class="nav-header">HỆ THỐNG</li>
                    @*<li><a href="http://thaoduoctoanthang.com"><span class="icon-home"></span> Dashboard</a></li>*@
                    @*<li><a href="#"><span class="icon-random"></span> Phân Quyền</a></li>*@
                    <li class="nav-header">DỮ LIỆU</li>
                    @*<li><a href="@Url.Action("ProductCategoryList", "ProductCategory")"><span class="icon-file"></span> Danh mục sản phẩm</a></li>
                        <li><a href="@Url.Action("IntroduceList","Introduce")"><span class="icon-eye-open"></span> Giới thiệu</a></li>
                        <li><a href="@Url.Action("ProductList","Product")"><span class="icon-file"></span> Sản phẩm</a></li>
                        <li><a href="@Url.Action("ArticleList","Article")"><span class="icon-file"></span> Tin tức</a></li>
                        <li><a href="@Url.Action("List","Branch")"><span class="icon-file"></span> Chi nhánh</a></li>*@
                    <li><a href="@Url.Action("List","Order")"><span class="iconsweets-image"></span> Đặt hàng</a></li>
                    @*<li><a href="@Url.Action("ContactList", "Contact")"><span class="icon-file"></span> Liên hệ</a></li>
                        <li><a href="@Url.Action("SliderList","Slider")"><span class="icon-briefcase"></span> Slider</a></li>
                        <li class="nav-header">SEO</li>
                        <li><a href="@Url.Action("SeoMetaList","SeoMeta")"><span class="icon-file"></span> SeoMeta</a></li>*@
                </ul>
            </div><!--leftmenu-->

        </div><!--mainleft-->
        <div class="rightpanel" style="margin-left:0 !important;">
            <div class="headerpanel">
                <a href="#" class="showmenu"></a>

                <div class="headerright">
                    <div class="dropdown userinfo">
                        <a class="dropdown-toggle" data-toggle="dropdown" data-target="#" href="http://demo.themepixels.com/page.html">Hi, ADMIN! <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Logout","Account")"><span class="icon-off"></span> Đăng xuất</a></li>
                        </ul>
                    </div><!--dropdown-->

                </div><!--headerright-->

            </div><!--headerpanel-->
            <div class="maincontent">
                <div class="contentinner">

                    <h4 class="widgettitle">
                        Danh sách
                        <a href="@Url.Action("OrderList","Order")" title="Tải lại" class="btn btn-primary" style="float:right;height: 17px;"><i class="iconfa-refresh icon-white" style="margin:0;line-height:17px;"></i></a>
                    </h4>

                    <table class="table table-bordered" id="dyntable">
                        <colgroup>
                            <col class="con0" style="align:center; width: 4%" />
                            <col class="con1" />
                            <col class="con0" />
                            <col class="con1" />
                            <col class="con0" />
                            <col class="con1" />
                        </colgroup>
                        <thead>
                            <tr role="row">
                                <th class="head0 nosort sorting_asc" role="columnheader" tabindex="0" aria-controls="dyntable" rowspan="1" colspan="1" aria-sort="ascending" aria-label=": activate to sort column ascending" style="width: 24px;">
                                    <div class="checker" id="uniform-undefined"><span><input type="checkbox" class="checkall" style="opacity: 0;"></span></div>
                                </th>
                                <th class="head0 sorting" role="columnheader" tabindex="0" aria-controls="dyntable" rowspan="1" colspan="1" aria-label="Tiêu đề: activate to sort column ascending" style="width: 121px;">Họ tên/ SĐT/ Email</th>
                                <th class="head1 sorting" role="columnheader" tabindex="0" aria-controls="dyntable" rowspan="1" colspan="1" aria-label="Mô tả: activate to sort column ascending" style="width: 300px;">Địa chỉ</th>
                                <th class="head0 sorting" role="columnheader" tabindex="0" aria-controls="dyntable" rowspan="1" colspan="1" aria-label="Hình ảnh: activate to sort column ascending" style="width: 150px;">Nội dung/ Tên sản phẩm</th>
                                <th class="head1 sorting" role="columnheader" tabindex="0" aria-controls="dyntable" rowspan="1" colspan="1" aria-label="Ngày/ Người đăng: activate to sort column ascending" style="width: 106px;">Ngày gửi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeX">
                                    <td class="aligncenter">
                                        <span class="center">
                                            <input type="checkbox" />
                                        </span>
                                    </td>
                                    <td>@item.FullName/&nbsp; @item.Mobi/ &nbsp;@item.Email</td>
                                    <td>@item.Address</td>
                                    <td>
                                        @item.Content/ &nbsp; Sản phẩm: @item.ProductName
                                    </td>
                                    <td class="center">@item.SendTime</td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                </div><!--contentinner-->
            </div>
        </div><!--mainright-->
        <div class="clearfix"></div>
        <div class="footer">
            <div class="footerleft">ToanThang tool admin - site</div>
            <div class="footerright">&copy; ToanThang - <a href="http://thaoduoctoanthang.com/">Follow me on Website</a></div>
        </div><!--footer-->
    </div><!--mainwrapper-->
    <!--modal-->
    <div aria-hidden="false" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" class="modal hide fade in" id="myModal">
        <div class="modal-header">
            <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
            <h3 id="myModalLabel">Hiển Thị Dữ Liệu Chi Tiết</h3>
        </div>
        <div id="myModalbody" class="modal-body">

        </div>
        <div class="modal-footer">
            <button data-dismiss="modal" class="btn">Close</button>
        </div>
    </div>
    <script type="text/javascript">
        function showDetail(action) {
            jQuery.ajax({
                method: "GET",
                url: action,
            }).done(function (data) {
                if (data == '') {
                    jAlert('Lỗi hiển thị dữ liệu!');
                }
                else {
                    jQuery('#myModalbody').html(data);
                    jQuery('#myModal').modal();
                }
            })
        }
    </script>
</body>

</html>
