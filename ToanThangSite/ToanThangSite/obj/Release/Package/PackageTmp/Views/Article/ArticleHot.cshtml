@model IEnumerable<ToanThangSite.Entities.Core.Article>
@using ToanThangSite.Business.Common

<div class="index-news uk-width-medium-5-10">
    <div>
        @foreach (var item in Model)
        {
            var url = "/"+item.Title.ToUrlFormat(true) +".html";
            <figure class="uk-clearfix">
                <a href="@url" title="@item.Title" class="fc-thumb">
                    <img src="@item.Thumb" alt="@item.Title.ToUrlFormat(true)" />
                </a>
                <figcaption>
                    <h3 class="title"><a href="@url" title="@item.Title">@item.Title</a></h3>
                </figcaption>
            </figure>
        }

    </div>
</div>
