                                    <li>
                                        @if (Model.ListBranch != "" && Model.ListBranch != null)
                                        {
                                            @Html.Action("BranchProduct", "Branch", new { @ID = Model.ListBranch.Trim(';').Split(';') })
                                        }
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div id="purchase-info" class="uk-modal">
    <div class="uk-modal-dialog p35">
        <a class="uk-modal-close uk-close"></a>
        <div class="title m0 pb25 fz20 lh26">
            <span class="uk-text-bold">Thông tin liên hệ</span>
        </div>
        <div id="orderForm" class="uk-form form">
            <div class="item mb15">
                <label for="" class="fc-db mb5">Họ và tên</label>
                <input type="text" name="fullname" id="Order_FullName" required class="uk-width-1-1 text" placeholder="Họ và tên" />
            </div>
            <div class="item mb15">
                <label for="" class="fc-db mb5">Địa chỉ</label>
                <input type="text" name="address" required id="Order_Address" class="uk-width-1-1 text" placeholder="Địa chỉ" />
            </div>
            <div class="item mb15">
                <label for="" class="fc-db mb5">Số điện thoại</label>
                <input type="text" name="phone" required id="Order_Mobi" class="uk-width-1-1 text" placeholder="Số điện thoại" />
            </div>
            <div class="item mb15">
                <label for="" class="fc-db mb5">Email (không bắt buộc)</label>
                <input type="email" name="email" id="Order_Email" class="uk-width-1-1 text" placeholder="Email" />
                <input type="hidden" name="pname" value="@Model.Title" id="Order_ProductName" class="uk-width-1-1 text" />
            </div>
            <div class="item mb15">
                <label for="" class="fc-db mb5">Nội dung</label>
                <textarea name="message" class="uk-width-1-1" id="Order_Content" placeholder="Tên sản phẩm và số lượng"></textarea>
            </div>
            <p style="color:red" id="ms_errorOrder"></p>
            <div class="item mb15">
                <button type="submit" name="submit" value="" onclick="SendOrder()" id="senOrderp" class="uk-button btn">Gửi</button>
            </div>
        </div>
    </div>
</div>
@Html.Action("ProductSimilar", "Product", new { @id = Model.ProductID })